      <%= last_char != l ? '<a name="' + l + '">' : '' %>
      <td id="lastName"><%= link_to athlete.Last_name, athlete %></td>
      <%= last_char != l ? '</a>' : '' %>
      <td id="firstName"><%= h athlete.First_name %></td>
      <td id="initial"><%= h athlete.Initial %></td>
      <td id="sex"><%= h athlete.Ath_Sex %></td>
      <td id="team"><%= link_to athlete.team.Team_abbr, :controller => "athletes", :team_id => athlete.team %></td>
