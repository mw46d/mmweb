<h1>
  <%= @team ? @team.Team_name.strip + " - " : "" %>
  Athletes
</h1>

<div style="margin: 20px 0px 0px 0px;"> </div>
<% last_char = ""
anchors = {}
@athletes.each do |athlete|
  l = athlete.Last_name.upcase[0,1]

  unless last_char == l
    anchors[l] = l
    last_char = l
  end
end
